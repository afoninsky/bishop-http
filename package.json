{
  "name": "bishop-http",
  "version": "0.0.2",
  "description": "http-transport plugin for bishop.js library",
  "main": "index.js",
  "scripts": {
    "legacy": "babel -s inline -d legacy src",
    "deploy": "npm run legacy && npm test && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afoninsky/bishop-http.git"
  },
  "author": "Andrey Afoninsky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/afoninsky/bishop-http/issues"
  },
  "homepage": "https://github.com/afoninsky/bishop-http#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.9.1",
    "eslint-plugin-output-todo-comments": "0.0.6",
    "nyc": "^9.0.1"
  },
  "dependencies": {
    "bloomrun": "^3.0.3",
    "koa": "next",
    "koa-bodyparser": "next",
    "koa-json": "next",
    "koa-router": "next",
    "request": "^2.79.0",
    "request-promise": "^4.1.1"
  },
  "ava": {
    "verbose": true,
    "source": [
      "**/*js"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-async-to-generator",
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "nyc": {
    "include": [
      "src/**.js",
      "legacy/**.js"
    ]
  }
}
